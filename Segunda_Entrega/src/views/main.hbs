        <div class="bigContainer">
            <div class="fiterContainer mb-3">
                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off">
                    <label class="btn btn-outline-warning" for="btnradio1"><a class="dropdown-item" href="/api/products?category=Categoria 1">Categoria 1</a></label>
                    
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
                    <label class="btn btn-outline-warning" for="btnradio2"><a class="dropdown-item" href="/api/products?category=Categoria 2">Categoria 2</a></label>

                    <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
