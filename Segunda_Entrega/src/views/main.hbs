                    <label class="btn btn-outline-warning" for="btnradio3"><a class="dropdown-item" href="/api/products?category=Categoria 4">Categoria 4</a></label>
                </div>

                <div class="btn-group mx-5" role="group" aria-label="Basic radio toggle button group">
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off">
                    <label class="btn btn-outline-light" for="btnradio1"><a class="dropdown-item" href="/api/products?sort=1">Menor a mayor precio</a></label>
                    
                    <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
